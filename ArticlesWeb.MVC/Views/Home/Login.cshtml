@model ArticlesWeb.Entities.RequestModels.UserLoginModel
@using ArticlesWeb.Entities.RequestModels
@{
    Layout = "_Layout2";

    string error = String.Empty;
    string message = String.Empty;

    if (TempData.ContainsKey("Error"))
    {
        error = TempData["Error"] as string;
    }
    if (TempData.ContainsKey("RegisterSuccessful"))
    {
        message = TempData["RegisterSuccessful"] as string;
    }
}

@if (!String.IsNullOrEmpty(error))
{
    <div class="alert alert-danger" role="alert">
        @error
    </div>
}
@if (!String.IsNullOrEmpty(message))
{
    <div class="alert alert-success" role="alert">
        @message
    </div>
}

<form method="post" asp-controller="Home" asp-action="Login">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label>Username</label>
        <input asp-for="Username" type="text" class="form-control" name="Username" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" type="password" class="form-control" name="Password" placeholder="Password">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>
